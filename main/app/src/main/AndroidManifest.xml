<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crazydiamond.seatassist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_sa"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_sa"
        android:supportsRtl="true"
        android:theme="@style/Theme.SeatAssist">
        <activity
            android:name="com.crazydiamond.seatassist.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SeatAssist.NoActionBar"
            android:screenOrientation="portrait"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>